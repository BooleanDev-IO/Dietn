<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:maxWidth="450dp"

    android:orientation="vertical"
    tools:context=".plan">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="58dp"
                android:fontFamily="@font/titillium"
                android:text="Weight Loss Diet Plans"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/titillium"
                android:text="Choose from below as per your choice"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/loss_1"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnl">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiet to loose 10kg in 3 months"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/loss_2"

                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnl2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiet to loose 20kg in 5 months"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/loss_3"

                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnl3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiet to loose 20kg and Shredness in 5 months"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/titillium"

                android:text="Weight Gain Diet Plans"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/titillium"

                android:text="Choose from below as per your choice"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/gain_1"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnla1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiet to gain 10kg in 2 months"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gain_2"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnla2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"

                            android:layout_marginBottom="5dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiet to gain muscle mass"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gain_3"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnla3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiet to loose 20kg in 5 months"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/titillium"

                android:text="Diabetes Diet Plans"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"

                android:fontFamily="@font/titillium"
                android:text="Choose from below as per your choice"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/dia_1"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnlc1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiabetes normal diet plan"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dia_2"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnlc2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiabetes Dietician suggested diet plan"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dia_3"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dietpnlc3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:background="@drawable/aa"
                            android:fontFamily="@font/titillium"
                            android:padding="10dp"
                            android:text="Veg/Non-Veg \nDiabetes Doctor suggested diet plan"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>